{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "OpenCVTest",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/build/OpenCVTest",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",   // <- this line is key
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb",  // confirm this path is valid
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ]
      }
    ]
  }